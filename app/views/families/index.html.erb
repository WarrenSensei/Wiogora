<h1>Listing Families</h1>

<table>
  <thead>
    <tr>
      <th>Parent1 name</th>
      <th>Parent2 name</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>City</th>
      <th>State</th>
      <th>Zipcode</th>
      <th>Phone</th>
      <th>Alt phone</th>
      <th>Trusted adults</th>
      <th>Referral</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @families.each do |family| %>
      <tr>
        <td><%= family.parent1_name %></td>
        <td><%= family.parent2_name %></td>
        <td><%= family.address1 %></td>
        <td><%= family.address2 %></td>
        <td><%= family.city %></td>
        <td><%= family.state %></td>
        <td><%= family.zipcode %></td>
        <td><%= family.phone %></td>
        <td><%= family.alt_phone %></td>
        <td><%= family.trusted_adults %></td>
        <td><%= family.referral %></td>
        <td><%= family.notes %></td>
        <td><%= link_to 'Show', family %></td>
        <td><%= link_to 'Edit', edit_family_path(family) %></td>
        <td><%= link_to 'Destroy', family, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

