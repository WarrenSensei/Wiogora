<p id="notice"><%= notice %></p>

<h1>Listing Campers</h1>

<table>
  <thead>
    <tr>
      <th>Family</th>
      <th>Alt address1</th>
      <th>Alt address2</th>
      <th>Alt city</th>
      <th>Alt state</th>
      <th>Alt zipcode</th>
      <th>Email</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Preferred name</th>
      <th>Pronoun</th>
      <th>Birthdate</th>
      <th>Faith</th>
      <th>Congregation</th>
      <th>House</th>
      <th>House preference</th>
      <th>House q1</th>
      <th>House q2</th>
      <th>House q3</th>
      <th>Friends</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campers.each do |camper| %>
      <tr>
        <td><%= camper.family_id %></td>
        <td><%= camper.alt_address1 %></td>
        <td><%= camper.alt_address2 %></td>
        <td><%= camper.alt_city %></td>
        <td><%= camper.alt_state %></td>
        <td><%= camper.alt_zipcode %></td>
        <td><%= camper.email %></td>
        <td><%= camper.first_name %></td>
        <td><%= camper.last_name %></td>
        <td><%= camper.preferred_name %></td>
        <td><%= camper.pronoun %></td>
        <td><%= camper.birthdate %></td>
        <td><%= camper.faith %></td>
        <td><%= camper.congregation %></td>
        <td><%= camper.house %></td>
        <td><%= camper.house_preference %></td>
        <td><%= camper.house_q1 %></td>
        <td><%= camper.house_q2 %></td>
        <td><%= camper.house_q3 %></td>
        <td><%= camper.friends %></td>
        <td><%= link_to 'Show', camper %></td>
        <td><%= link_to 'Edit', edit_camper_path(camper) %></td>
        <td><%= link_to 'Destroy', camper, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

